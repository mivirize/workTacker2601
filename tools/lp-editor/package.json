{
  "name": "lp-editor",
  "version": "0.1.0",
  "description": "LP-CMS Editor - Edit and export landing pages",
  "main": "./dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:admin": "concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"npm run dev:electron:admin\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "dev:electron": "node scripts/wait-and-start.js",
    "dev:electron:admin": "node scripts/wait-and-start.js --admin",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "node scripts/start-electron.js",
    "preview": "npm run build && node scripts/start-electron.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder && node scripts/fix-app.js"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "cheerio": "1.0.0",
    "sharp": "^0.34.5",
    "zundo": "^2.3.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^26.4.0",
    "eslint": "^8.57.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.3.1",
    "vitest": "^1.6.0"
  },
  "build": {
    "appId": "com.lp-cms.editor",
    "productName": "LP-Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "dir"
    },
    "asar": false
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "sharp"
    ]
  }
}
